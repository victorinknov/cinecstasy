      <!-- Divider -->
      <hr class="sidebar-divider d-none d-md-block">
      <!-- Sidebar Toggler (Sidebar) -->
      <div class="text-center d-none d-md-inline">
        <button class="rounded-circle border-0" id="sidebarToggle"></button>
      </div>
    </ul>
    <!-- End of Sidebar -->
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <!-- Topbar -->
        <nav class="navbar navbar-expand navbar-light bg-dark topbar mb-4 static-top shadow">
          <!-- Sidebar Toggle (Topbar) -->
          <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
            <i class="fa fa-bars"></i>
          </button>
          <!-- Topbar Search -->
          <form method="post"
            class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-150 navbar-search">
            <div class="input-group">
              <select name="typeSearch" class="form-select selectType">

                <!-- General Search -->
                <optgroup label="GERAL">
                  <option id="name" value="movieName"> Nome </option>
                  <option id="rdate" value="releaseDate"> Data </option>
                  <option id="director" value="director"> Diretor </option>
                  <option id="movieCast" value="movieCast"> Elenco </option>
                </optgroup>

                <!-- Genre Search -->
                <optgroup label="Gênero">
                  <option value="ação">Ação</option>
                  <option value="animação">Animação</option>
                  <option value="aventura">Aventura</option>
                  <option value="assalto">Assalto</option>
                  <option value="comédia">Comédia</option>
                  <option value="drama">Drama</option>
                  <option value="documentário">Documentário</option>
                  <option value="faroeste">Faroeste</option>
                  <option value="guerra">Guerra</option>
                  <option value="romance">Romance</option>
                  <option value="sci-fi">SCI-FI</option>
                  <option value="suspense">Suspense</option>
                  <option value="terror">Terror</option>
                  <option value="thriller">THRILLER</option>
                </optgroup>
              </select>
              <select name="filterSearch" class="form-select selectSort">
                <optgroup label="GERAL">
                  <option value="ASC">Crescente</option>
                  <option value="DESC">Decrescente</option>
                </optgroup>
                <optgroup label="STATUS">
                  <option value="ativo">Ativo</option>
                  <option value="inativo">Inativo</option>
                  <option value="em-breve">Em breve</option>
                  <option value="lançamento">Lançamento</option>
                  <option value="ultimos-dias">Últimos Dias</option>
                </optgroup>
              </select>

              <input type="text" name="mySearch" class="form-control bg-dark border-1 border-light small"
                placeholder="Pesquise algum filme pelo nome, gênero, status, sinopse, diretores ou atores..."
                aria-label="Search" aria-describedby="basic-addon2">

              <div class="input-group-append">
                <button class="btn btn-light" type="sumbit">
                  <i class="fas fa-search fa-sm"></i>
                </button>
              </div>
            </div>
          </form>
          <!-- Topbar Navbar -->
          <ul class="navbar-nav ml-auto">
            <!-- Nav Item - Search Dropdown (Visible Only XS) -->
            <li class="nav-item dropdown no-arrow d-sm-none">
              <a class="nav-link dropdown-toggle" href="#" id="searchDropdown" role="button" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-search fa-fw"></i>
              </a>
            </li>
            <div class="topbar-divider d-none d-sm-block"></div>
            <!-- Nav Item - User Information -->
            <li class="nav-item dropdown no-arrow">
              <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
                {{#each user_logged_data}}
                <span class="mr-2 d-none d-lg-inline text-gray-600 small">{{firstName}}
                  {{lastName}}</span>
                <span class="mr-2 d-none d-lg-inline smaller">ADMIN</span>
                <img class="img-profile rounded-circle" {{{userImage}}} alt="" />

              </a>
              <!-- Dropdown - User Information -->
              <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                <a class="dropdown-item" href="#">
                  <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                  Perfil
                </a>
                <a class="dropdown-item" href="#">
                  <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
                  Configurações
                </a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                  <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                  Sair
                </a>
              </div>
            </li>
          </ul>
        </nav>
        <!-- End of Topbar -->
        <!-- Begin Page Content -->
        <div class="container mt-0">
          <div class="container-fluid mt--7">
            <div class="row">
              <div class="col-xl-4 order-xl-2 mb-4">
                <div class="card card-profile shadow">
                  <div class="row justify-content-center">
                    <div class="card-profile-image mt-5">
                      <a href="#">
                        <img {{{userImage}}} class="rounded-circle">
                      </a>
                    </div>
                  </div>
                  <div class="card-body pt-0 pt-md-0">
                    <div class="row">
                      <div class="col">
                        <div class="card-profile-stats d-flex justify-content-center mt-md-2">
                          <div>
                            <span class="heading">22</span>
                            <span class="description">Sessões</span>
                          </div>
                          <div>
                            <span class="heading">10</span>
                            <span class="description">Pontos</span>
                          </div>
                          <div>
                            <span class="heading">89</span>
                            <span class="description">Comments</span>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="text-center" style="margin-bottom: 4.95rem">
                      <h3>
                        {{firstName}} {{lastName}}
                      </h3>
                      <div class="h5 mt-2">
                        Solution Manager - Creative Tim Officer
                      </div>
                      <div class="h6 mt-2">
                        University of Computer Science
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <br> <br>
              <div class="col-xl-8 order-xl-1 mb-4">
                <div class="card shadow">
                  <div class="card-header bg-darker border-0">
                    <div class="row align-items-center">
                      <div class="col-8">
                        <h3 class="mb-0">Minha Conta</h3>
                      </div>
                      <div class="col-4 text-right">
                        <a href="#!" class="btn btn-sm btn-primary">ATUALIZAR</a>
                      </div>
                    </div>
                  </div>
                  <div class="card-body">
                    <form method="post" action="/dashboard/profile/edit/:idUser">
                      <div class="pl-lg-4">
                        <div class="row">
                          <div class="col-lg-6">
                            <div class="form-group">
                              <label class="form-control-label" for="input-username">Username</label>
                              <input type="text" id="input-username" class="form-control" placeholder="Username"
                                value="{{{username}}}">
                            </div>
                          </div>
                          <div class="col-lg-6">
                            <div class="form-group">
                              <label class="form-control-label" for="input-email">Email</label>
                              <input type="email" value="{{{email}}}" id="input-email"
                                class="form-control form-control-alternative" placeholder="example@mail.com">
                            </div>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col-lg-6">
                            <div class="form-group">
                              <label class="form-control-label" for="input-first-name">Primeiro Nome</label>
                              <input type="text" id="input-first-name" class="form-control" placeholder="First name"
                                value="{{{firstName}}}">
                            </div>
                          </div>
                          <div class="col-lg-6">
                            <div class="form-group">
                              <label class="form-control-label" for="input-last-name">Último Nome</label>
                              <input type="text" id="input-last-name" class="form-control" placeholder="Last name"
                                value="{{{lastName}}}">
                            </div>
                          </div>
                          <div class="col-md-12">
                            <div class="form-group">
                              <label class="form-control-label" for="input-address">Endereço</label>
                              <input id="input-address" class="form-control" placeholder="Home Address"
                                value="Rua Carajás 480, Barueri-SP (06417-040)" type="text">
                            </div>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col-lg-4">
                            <div class="form-group">
                              <label class="form-control-label" for="input-city">País</label>
                              <input type="text" id="input-city" class="form-control" placeholder="País" value="Brasil">
                            </div>
                          </div>
                          <div class="col-lg-4">
                            <div class="form-group">
                              <label class="form-control-label" for="input-city">Estado</label>
                              <input type="text" id="input-city" class="form-control" placeholder="Estado"
                                value="São Paulo">
                            </div>
                          </div>
                          <div class="col-lg-4">
                            <div class="form-group">
                              <label class="form-control-label" for="input-city">Cidade</label>
                              <input type="text" id="input-city" class="form-control" placeholder="Cidade"
                                value="Barueri">
                            </div>
                          </div>
                          <div class="col-lg-4">
                            <div class="form-group">
                              <label class="form-control-label" for="input-city">CEP</label>
                              <input type="number" id="input-cep" class="form-control" placeholder="06417-040">
                            </div>
                          </div>
                          <div class="col-lg-4">
                            <div class="form-group">
                              <label class="form-control-label" for="input-country">CNPJ</label>
                              <input type="number" id="input-cnpj" class="form-control"
                                placeholder="00.000.000/0000-00">
                            </div>
                          </div>
                          <div class="col-lg-4">
                            <div class="form-group">
                              <label class="form-control-label" for="input-country">Número</label>
                              <input data-mask="sp_celphones" type="number" min="1" max="999999999" id="input-number"
                                class=" form-control" placeholder="(11) 96068-7340">
                            </div>
                          </div>
                        </div>
                      </div>
                  </div>

                </div>

                </form>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
        <!--container-->
        <!-- End of Main Content -->
        <!-- Footer -->
        <footer class="sticky-footer bg-dark my-0">
          <div class="container my-auto">
            <div class="copyright text-center my-auto">
              <img src="/img/logo.svg" class="img-logo" alt="" srcset="">
            </div>
          </div>
        </footer>
        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>
    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Realmente deseja sair?</h5>
            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
          </div>
          <div class="modal-body">
            <img src="/img/undraw_goodbye.svg" class="goodbye-image" alt="" srcset="">
          </div>
          <div class="modal-footer">
            <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
            <a class="btn btn-danger" href="login.html">Sair</a>
          </div>
        </div>
      </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
</body>